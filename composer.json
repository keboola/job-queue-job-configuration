{
    "name": "keboola/job-queue-job-configuration",
    "type": "library",
    "license": "MIT",
    "description": "",
    "autoload": {
        "psr-4": {
            "Keboola\\JobQueue\\JobConfiguration\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Keboola\\JobQueue\\JobConfiguration\\Tests\\": "tests/"
        }
    },
    "config": {
        "lock": false,
        "sort-packages": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "require": {
        "php": "^8.2",
        "colinodell/psr-testlogger": "^1.3",
        "keboola/common-exceptions": "^1.2",
        "keboola/input-mapping": "dev-pepa_invertStaging",
        "keboola/output-mapping": "dev-pepa_invertStaging",
        "keboola/staging-provider": "dev-pepa_invertStaging",
        "keboola/storage-api-client": "^18.1",
        "psr/log": "^3.0",
        "symfony/config": "^6.4|^7.0"
    },
    "require-dev": {
        "keboola/coding-standard": ">=15.0",
        "keboola/php-temp": "^2.0",
        "phpstan/phpstan": "^1.10",
        "phpstan/phpstan-phpunit": "^1.3",
        "phpstan/phpstan-symfony": "^1.2",
        "phpunit/phpunit": "^10.0",
        "symfony/dotenv": "^7.0"
    },
    "scripts": {
        "tests": "phpunit",
        "phpstan": "phpstan analyse --no-progress -c phpstan.neon",
        "phpcs": "phpcs -n --ignore=vendor,cache,Kernel.php --extensions=php .",
        "phpcbf": "phpcbf -n --ignore=vendor,cache,Kernel.php --extensions=php .",
        "check": [
            "@phpcs",
            "@phpstan",
            "@tests"
        ],
        "ci": [
            "@composer validate --no-check-all --strict",
            "@check"
        ]
    }
}
